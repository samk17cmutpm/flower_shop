<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="profile"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardElevation="8dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/im_flower"
                android:src="@drawable/rose"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hoa Hồng Đẹp"
                android:id="@+id/tv_flower_name"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/im_flower"
                android:layout_toEndOf="@+id/im_flower"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tv_price"
                android:textColor="@color/red"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_below="@+id/tv_flower_name"
                android:layout_alignLeft="@+id/tv_flower_name"
                android:layout_alignStart="@+id/tv_flower_name"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tv_price_old"
                android:textColor="@color/secondary_text"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_alignTop="@+id/tv_price"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_toEndOf="@+id/tv_price"
                android:layout_marginLeft="20dp" />

            <RatingBar
                style="@style/RatingBar"
                android:rating="0"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_bar"
                android:layout_below="@+id/tv_price"
                android:layout_alignLeft="@+id/tv_flower_name"
                android:layout_alignStart="@+id/tv_flower_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_delete"
                android:layout_marginRight="20dp" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
