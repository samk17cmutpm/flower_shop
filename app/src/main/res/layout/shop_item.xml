<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="profile"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardElevation="8dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/im_flower"
                android:src="@drawable/loading_stripes"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Hoa Hồng Đẹp"
                android:id="@+id/tv_flower_name"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/im_flower"
                android:layout_toEndOf="@+id/im_flower"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/tv_price"
                android:textColor="@color/red"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_below="@+id/tv_flower_name"
                android:layout_alignLeft="@+id/tv_flower_name"
                android:layout_alignStart="@+id/tv_flower_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_price_old"
                android:textColor="@color/secondary_text"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_below="@+id/tv_price"
                android:layout_alignLeft="@+id/tv_price"
                android:layout_alignStart="@+id/tv_price" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_delete"
                android:src="@drawable/ic_delete"
                android:visibility="invisible"
                android:layout_alignBottom="@+id/tv_price_old"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="28dp"
                android:layout_marginEnd="28dp" />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_button"
                android:layout_width="100dp"
                app:backGroundColor="@color/colorPrimary"
                app:textSize="8sp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_delete"
                android:layout_alignLeft="@+id/tv_price_old"
                android:layout_alignStart="@+id/tv_price_old" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Số lượng:"
                android:id="@+id/textView6"
                android:layout_alignBottom="@+id/number_button"
                android:layout_toRightOf="@+id/number_button"
                android:layout_toEndOf="@+id/number_button"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_number"
                android:layout_alignBottom="@+id/number_button"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/im_delete"
                android:src="@drawable/shopping_remove"
                android:layout_above="@+id/tv_number"
                android:layout_alignLeft="@+id/iv_delete"
                android:layout_alignStart="@+id/iv_delete"
                android:layout_marginRight="10dp"
                android:background="@drawable/category_drawer_background"
                android:foreground="?selectableItemBackground"/>
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
